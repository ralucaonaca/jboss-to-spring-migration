<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <preConditions>
        <runningAs  username="postgres"/>
    </preConditions>

    <changeSet  id="1"  author="Raluca">
        <createTable  tableName="members">
            <column  name="id"  type="int"  autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="email"  type="varchar(50)">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column  name="phone_number"  type="varchar(12)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Raluca">
        <insert tableName="members">
            <column name="id" value="0" />
            <column name="name" value="John Doe" />
            <column name="email" value="john.smith@mailinator.com" />
            <column name="phone_number" value="2125551212" />
        </insert>
    <rollback/>
</changeSet>
</databaseChangeLog>